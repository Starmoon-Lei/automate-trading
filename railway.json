{
  "build": {
    "builder": "NIXPACKS"
  },
  "predeploy": {
    "command": "bash scripts/pre_launch_check.sh"
  },
  "deploy": {
    "startCommand": "sh -c 'python -m uvicorn src.main:app --host 0.0.0.0 --port ${PORT:-8080}'",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}